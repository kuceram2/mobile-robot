<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:include filename="inertial_macros.xacro"/>

<material name="white">
    <color rgba="1 1 1 1" />
</material>   

<material name="red">
    <color rgba="1 0 0 1" />
</material>  

<material name="green">
    <color rgba="0 1 0 1" />
</material>  

<material name="blue">
    <color rgba="0 0 1 1" />
</material>  

<!--BASE LINK-->

<link name="base_link">

</link>

<!--BASE FOOTPRINT-->

<joint name="base_footprint_link" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
</joint>

<link name="base_footprint">
    
</link>

<!--CHASSIS LINK-->

<joint name="chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin xyz= "0 0 0"/>
</joint>

<link name="chassis">
    <visual>
        <origin  xyz="0.06 0 0.035"/>
        <geometry>
            <cylinder radius="0.145" length="0.08"/>
        </geometry>
        <material name="white">
            
        </material>
    </visual>

    <collision>
        <origin  xyz="0.06 0 0.035"/>
        <geometry>
            <cylinder radius="0.145" length="0.08"/>     
        </geometry>
    </collision>
    <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
        <origin xyz="0.15 0.0 0.075" rpy="0 0 0"/>
    </xacro:inertial_box>
</link>

<gazebo reference="chassis">
    <material>Gazebo/White</material>
</gazebo>  

<!-- LEFT WHEEL LINK -->

<joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz=" 0 0.09 0.00" rpy="-${pi/2} 0.0 0.0"/>
    <axis xyz="0.0 0.0 1"/>
</joint>

<link name="left_wheel">
    <visual>
        <geometry>
            <cylinder radius="0.035" length="0.026"/>
        </geometry>
        <material name="blue"/>
    </visual>

    <collision>
        <geometry>
            <cylinder radius="0.035" length="0.026"/>
        </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.02" radius="0.03" length="0.01">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </xacro:inertial_cylinder>
</link>

<gazebo reference="left_wheel">
    <material>Gazebo/Blue</material>
</gazebo>

<!-- RIGHT WHEEL LINK-->

<joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz=" 0 -0.09 0.00" rpy="-${pi/2} 0.0 0.0"/>
    <axis xyz="0.0 0.0 1"/>
</joint>

<link name="right_wheel">
    <visual>
        <geometry>
            <cylinder radius="0.035" length="0.026"/>
        </geometry>
        <material name="blue"/>
    </visual>

    <collision>
        <geometry>
            <cylinder radius="0.035" length="0.026"/>
        </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.02" radius="0.03" length="0.01">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </xacro:inertial_cylinder>
</link>

<gazebo reference="right_wheel">
    <material>Gazebo/Blue</material>
</gazebo>

<!--CASTER WHEEL LINK-->

<joint name="caster_wheel_joint" type="fixed">
    <parent link="chassis"/>
    <child link="caster_wheel"/>
    <origin xyz="0.17 0 -0.015"/>
</joint>

<link name="caster_wheel">
    <visual>
        <geometry>
            <sphere radius="0.02"/>
        </geometry>
        <material name="green"/>
    </visual>

    <collision>
        <geometry>
            <sphere radius="0.02"/>
        </geometry>
    </collision>
    <xacro:inertial_sphere mass="0.02" radius="0.03">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </xacro:inertial_sphere>
</link>

<gazebo reference="caster_wheel">
    <material>Gazebo/Green</material>
    <mu1 value="0.001"/>
    <mu2 value="0.001"/>
</gazebo>  

<!--FRONT MARKER LINK-->

<joint name="front_marker_joint" type="fixed">
    <parent link="chassis"/>
    <child link="front_marker"/>
    <origin xyz="0.17 0 0.08"/>
</joint>

<link name="front_marker">
    <visual>
        <geometry>
            <sphere radius="0.02"/>
        </geometry>
        <material name="red"/>
    </visual>

    <collision>
        <geometry>
            <sphere radius="0.02"/>
        </geometry>
    </collision>
    <xacro:inertial_sphere mass="0.02" radius="0.03">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </xacro:inertial_sphere>
</link>

<gazebo reference="front_marker">
    <material>Gazebo/Red</material>
    <mu1 value="0.001"/>
    <mu2 value="0.001"/>
</gazebo>  

</robot>